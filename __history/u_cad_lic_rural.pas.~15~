unit u_cad_lic_rural;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.DBCtrls, Vcl.Mask,
  Vcl.ExtCtrls, udm, Data.DB, Vcl.Grids, Vcl.DBGrids;

type
  Tfrm_cad_lic_rural = class(TForm)
    Panel1: TPanel;
    btnNovo: TButton;
    btnSalvar: TButton;
    btnCancelar: TButton;
    btnAlterar: TButton;
    btnExcluir: TButton;
    btnAtualizar: TButton;
    btnSair: TButton;
    Label1: TLabel;
    DBEdit1: TDBEdit;
    Label2: TLabel;
    DBEdit2: TDBEdit;
    Label3: TLabel;
    DBEdit3: TDBEdit;
    Label4: TLabel;
    DBEdit4: TDBEdit;
    Label5: TLabel;
    DBEdit5: TDBEdit;
    Label6: TLabel;
    Label7: TLabel;
    DBEdit7: TDBEdit;
    Label8: TLabel;
    DBEdit8: TDBEdit;
    Label9: TLabel;
    DBEdit9: TDBEdit;
    Label10: TLabel;
    DBEdit10: TDBEdit;
    Label11: TLabel;
    DBEdit11: TDBEdit;
    Label12: TLabel;
    DBEdit12: TDBEdit;
    Label13: TLabel;
    DBEdit13: TDBEdit;
    Label14: TLabel;
    DBComboBox1: TDBComboBox;
    DBComboBox2: TDBComboBox;
    DBGrid1: TDBGrid;
    Label15: TLabel;
    DBEdit6: TDBEdit;
    procedure btnNovoClick(Sender: TObject);
    procedure btnSalvarClick(Sender: TObject);
    procedure btnCancelarClick(Sender: TObject);
    procedure btnAlterarClick(Sender: TObject);
    procedure btnAtualizarClick(Sender: TObject);
    procedure btnSairClick(Sender: TObject);
    procedure btnExcluirClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frm_cad_lic_rural: Tfrm_cad_lic_rural;

implementation

{$R *.dfm}

procedure muda;
begin
  frm_cad_lic_rural.btnNovo.Enabled:= not frm_cad_lic_rural.btnNovo.Enabled;
  frm_cad_lic_rural.btnSalvar.Enabled:= not frm_cad_lic_rural.btnSalvar.Enabled;
  frm_cad_lic_rural.btnCancelar.Enabled:= not frm_cad_lic_rural.btnCancelar.Enabled;
  frm_cad_lic_rural.btnAlterar.Enabled:= not frm_cad_lic_rural.btnAlterar.Enabled;
  frm_cad_lic_rural.btnExcluir.Enabled:= not frm_cad_lic_rural.btnExcluir.Enabled;
end;


procedure Tfrm_cad_lic_rural.btnAlterarClick(Sender: TObject);
begin
muda;
dm.tb_lic_rural.Edit;
end;

procedure Tfrm_cad_lic_rural.btnAtualizarClick(Sender: TObject);
begin
dm.tb_lic_rural.Refresh;
end;

procedure Tfrm_cad_lic_rural.btnCancelarClick(Sender: TObject);
begin
dm.tb_lic_rural.Cancel;
muda;
end;

procedure Tfrm_cad_lic_rural.btnExcluirClick(Sender: TObject);
begin
  if MessageDlg('Deseja Excluir ?',mtConfirmation,[mbYes,mbNo],0)=mrYes then
  begin
    dm.tb_lic_rural.Delete;
  end;
end;

procedure Tfrm_cad_lic_rural.btnNovoClick(Sender: TObject);
var
  codigo:Integer;
begin
muda;
// mudamos o ponteiro para o ultimo registro
dm.tb_lic_rural.Last;
// nossa variavel recebe o campo (0) que é o código
codigo:=dm.tb_lic_rural.Fields[0].AsInteger;
dm.tb_lic_rural.Insert;
// nossa variavel recebe ela mais 1
codigo:=codigo+1;
// nossa caixa de texto recebe nossa variavel convertida
DBEdit1.Text:=IntToStr(codigo);
// caixa de texto N°PROTOCOLO RECEBE FOCO
DBEdit2.SetFocus;
end;

procedure Tfrm_cad_lic_rural.btnSairClick(Sender: TObject);
begin
close;
end;

procedure Tfrm_cad_lic_rural.btnSalvarClick(Sender: TObject);
begin
dm.tb_lic_rural.Post;
muda;
end;

end.
